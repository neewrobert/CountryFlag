<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.newton.countryflags.MainActivity">

    <ImageButton
        android:id="@+id/main_btnSetPhoto"
        android:layout_width="114dp"
        android:layout_height="96dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/main_btnStart"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/main_txtRgm"
        android:layout_width="202dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/main_txtName"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/main_btnSetPhoto"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/main_txtName"
        android:layout_width="202dp"
        android:layout_height="29dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/main_btnSetPhoto"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/main_btnExit"
        android:layout_width="152dp"
        android:layout_height="55dp"
        android:text="Sair"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/main_btnStart"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/main_txtRgm"
        app:layout_constraintVertical_bias="0.492"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/main_btnStart"
        android:layout_width="152dp"
        android:layout_height="55dp"
        android:text="Iniciar"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/main_txtRgm"
        app:layout_constraintVertical_bias="0.492" />

    <EditText
        android:id="@+id/main_editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Digite seu Nome"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/main_editTextRgm"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/main_txtRgm"
        app:layout_constraintVertical_bias="0.68" />

    <EditText
        android:id="@+id/main_editTextRgm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite seu RGM"
        android:inputType="number"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/main_btnStart" />
</android.support.constraint.ConstraintLayout>
